<settings>
    <mirrors>
        <mirror>
            <id>mirror</id>
            <mirrorOf>*,!maven-release,!maven-snapshot</mirrorOf>
            <name>mirror</name>
            <url>https://maven.aliyun.com/nexus/content/groups/public/</url>
        </mirror>
    </mirrors>
    <servers>
        <server>
            <id>maven-snapshot</id>
            <username>${username}</username>
            <password>${userpassword}</password>
            <configuration>
                <httpConfiguration>
                    <get>
                        <usePreemptive>true</usePreemptive>
                    </get>
                </httpConfiguration>
            </configuration>
        </server>
        <server>
            <id>maven-release</id>
            <username>${username}</username>
            <password>${userpassword}</password>
            <configuration>
                <httpConfiguration>
                    <get>
                        <usePreemptive>true</usePreemptive>
                    </get>
                </httpConfiguration>
            </configuration>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>dev</id>
            <properties>
              <altSnapshotDeploymentRepository>
                maven-snapshot::default::https://artifacts.cloud.alipay.com/artifactory/repositories/${tenant}/maven-snapshot/
              </altSnapshotDeploymentRepository>
              <altReleaseDeploymentRepository>
                maven-release::default::https://artifacts.cloud.alipay.com/artifactory/repositories/${tenant}/maven-release/
              </altReleaseDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>maven-snapshot</id>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <url>https://artifacts.cloud.alipay.com/artifactory/repositories/${tenant}/maven-snapshot/</url>
                </repository>
                <repository>
                    <id>maven-release</id>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <url>https://artifacts.cloud.alipay.com/artifactory/repositories/${tenant}/maven-release/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>snapshot</id>
                    <url>https://maven.aliyun.com/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>release</id>
                    <url>https://maven.aliyun.com/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>dev</activeProfile>
    </activeProfiles>
</settings>
